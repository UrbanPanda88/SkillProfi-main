<Window x:Class="SkillProfiWPF.StatusSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Status Selection" Height="150" Width="300">
    <Grid>
        <ComboBox x:Name="statusComboBox" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <ComboBoxItem Content="Received"/>
            <ComboBoxItem Content="InProgress"/>
            <ComboBoxItem Content="Completed"/>
            <ComboBoxItem Content="Rejected"/>
            <ComboBoxItem Content="Canceled"/>
        </ComboBox>
        <Button Content="OK" Margin="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="OKButton_Click"/>
    </Grid>
</Window>