@model List<SkillProfi.Models.Service>

@{
    ViewData["Title"] = "Services";
}

<h1>@ViewData["MenuTitle"]</h1>
@if (User.Identity.IsAuthenticated)
{
    <p><a href="@Url.Action("AddService")" class="btn btn-primary">Добавить услугу</a></p>
}

<div class="accordion" id="accordionServices">
    @foreach (var service in Model)
    {
        <div class="accordion-item">
            <h2 class="accordion-header" id="@($"heading{service.Id}")">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="@($"#collapse{service.Id}")" aria-expanded="false" aria-controls="@($"collapse{service.Id}")">
                    @service.Title
                </button>
            </h2>
            <div id="@($"collapse{service.Id}")" class="accordion-collapse collapse" aria-labelledby="@($"heading{service.Id}")" data-bs-parent="#accordionServices">
                <div class="accordion-body">
                    @service.Description
                </div>
            </div>
        </div>

        @if (User.Identity.IsAuthenticated)
        {
            <div class="project-actions">
                <a href="@Url.Action("EditService", new { id = service.Id })" class="btn btn-secondary">Редактировать</a>
                <form class="delete-form" action="@Url.Action("DeleteService")" method="post">
                    <input type="hidden" name="id" value="@service.Id" />
                    <input type="submit" value="Удалить" class="btn btn-danger" />
                </form>
            </div>
        }
    }
</div>
