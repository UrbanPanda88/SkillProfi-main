@model SkillProfi.Models.MenuTitles

@{
    ViewData["Title"] = "Редактирование меню";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditMenuTitle">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input asp-for="Id" type="hidden" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LinkAction" class="control-label"></label>
        <input asp-for="LinkAction" class="form-control" />
        <span asp-validation-for="LinkAction" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LinkController" class="control-label"></label>
        <input asp-for="LinkController" class="form-control" />
        <span asp-validation-for="LinkController" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>
