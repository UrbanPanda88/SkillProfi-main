@model SkillProfi.Models.Request

@{
    ViewData["Title"] = "Изменить статус заявки";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="ChangeStatus">
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" asp-items="Html.GetEnumSelectList<RequestStatus>()" class="form-control">
            <option value="">Выберите новый статус</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>
